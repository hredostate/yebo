# Enable RewriteEngine
RewriteEngine On

# Set the base directory
RewriteBase /

# MIME Types - Ensure JavaScript files are served correctly
AddType application/javascript .js
AddType application/javascript .mjs
AddType text/css .css
AddType image/svg+xml .svg
AddType application/json .json
AddType application/manifest+json .webmanifest
AddType image/png .png
AddType image/x-icon .ico

# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css application/javascript application/json image/svg+xml
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    # Cache hashed assets for 1 year (they have content hashes in filename)
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType application/manifest+json "access plus 1 week"
    # Don't cache HTML - always revalidate
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Cache-Control headers for proper caching strategy
<IfModule mod_headers.c>
    # HTML files should not be cached - force revalidation on every visit
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Service Worker should not be cached - always fetch fresh version
    <FilesMatch "^sw\.js$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Workbox files should not be cached
    <FilesMatch "^workbox-.*\.js$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
    
    # Manifest files should have short cache
    <FilesMatch "\.webmanifest$">
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>
    
    # Images and fonts can be cached for 1 year
    <FilesMatch "\.(png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # Hashed assets (with hash in filename) can be cached for 1 year
    # This rule must come after images rule to ensure proper priority
    <FilesMatch "\-[a-zA-Z0-9]{8,}\.(js|css)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
    
    # Content Security Policy
    # Allow scripts from self, aistudiocdn.com (import maps), and inline scripts
    # Allow styles from self and inline styles
    # Allow images from self and Supabase storage
    # Allow connections to self, aistudiocdn.com, Supabase, OpenRouter AI API, and Paystack API
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://aistudiocdn.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://tyvufbldcucgmmlattct.supabase.co; connect-src 'self' https://aistudiocdn.com https://*.supabase.co wss://*.supabase.co https://openrouter.ai https://*.openrouter.ai https://api.paystack.co; font-src 'self' data:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'self';"
</IfModule>

# Handle SPA routing - redirect all requests to index.html
# This ensures React Router works correctly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.html [L]

# Prevent directory listing
Options -Indexes

# Prevent access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>
